<div class="category-header">kategorie</div>
<div ng-controller="categoryController" class="category-left">
    <div ng-show="selectedCategory.parentId"> 
        <a ng-click="categoryClicked(selectedCategory.parentId)" href="#">Do góry</a>
    </div>

    <div ng-show="!selectedCategory.children.length">
        <ul>
            <li>
                {{selectedCategory.name}} -- {{offers.total}}
            </li>

        </ul>
    </div>
    <ul>
        <li ng-show="selectedCategory.children.length" ng-repeat="cat in selectedCategory.children" ng-click="categoryClicked(cat.id)">{{cat.name}} -- {{cat.offersNumber}}
        </li>

    </ul>
</div>